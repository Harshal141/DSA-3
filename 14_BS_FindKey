// binary search for increasing order array
// -1 if not present

#include <iostream>
using namespace std;

int test(int arr[], int len, int key) {
  int min = 0;
  int max = len - 1;
  int mid = min + (max - min) / 2;
  while (min <= max) {
    if (arr[mid] == key)
      return mid;
    if (arr[mid] < key)
      min = mid + 1;
    else
      max = mid - 1;
    mid = min + (max - min) / 2;
  }
  return -1;
}

int main() {
  int arr[8] = {1, 2, 3, 4, 5, 6, 7, 8};
  int len = 9;
  int key = 8;
  cout << test(arr, len, key);
  return 0;
}